<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container" width="100%" height="100%" style="border-width: 5px; border-style: solid; background-color:powderblue">
            <h1 asp-area="" asp-controller="Home" asp-action="Index" style="text-align: center;  margin: 0px auto;">Welcome to LAX's Moviedatabase</h1>
        </div>
    </header>
    <div>
        <nav >
            <div class="text-center" style="height:100%; width:100%;">
                <div style="float:left; box-sizing: border-box; height: 100%; width: 25%; padding: 2% 4%;margin: 15px 5%; border-width: 5px; border-style: solid;  background-color: lightyellow">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="text-align:center;">Browse Movies</a>
                </div>
                <div style="float:right; box-sizing: border-box; height: 100%; width: 25%; padding: 2% 4%;margin: 15px 5%; border-width: 5px; border-style: solid; background-color: lightyellow">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="text-align:center;">Contact</a>
                </div>
                <div style="display:inline-block; box-sizing: border-box; height: 100%; width: 25%; padding: 2% 4%; margin: 15px auto; border-width: 5px; border-style: solid; background-color: lightyellow ">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="text-align:center;">About</a>
                </div>
            </div>
        </nav>
    </div>
    <div style="clear:both">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: powderblue">
        <div class="container">
            &copy; 2020 - LAX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
