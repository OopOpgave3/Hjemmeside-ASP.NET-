@model LaxWebsiteProject.Models.MovieListViewModel
@{
    ViewData["Title"] = "Browse movies";
}
<div>
    <div class="text-center">
        <h1>Browse movies</h1>
        <p>Here you can browse our movie databse. Either by title or genre. Happy browsing!</p>
    </div>
    
    <form asp-controller="BrowseMovie" asp-action="Index" method="get">
         <p>
        <select asp-for="Movies" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>

    </form>
    <div style="width:60%; height:80%;margin: 10px auto; border:3px; border-style:solid;background-color:aliceblue">
        <table class="table" style="clear:both">
            <thead>
                <tr>
                    <th>
                        <p>Title</p>
                    </th>
                    <th>
                        <p>Release date</p>
                    </th>
                    <th>
                        <p>Genre</p>
                    </th>
                    <th>
                        <p>Rating</p>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr style="border-bottom-width:2px; border-bottom-style:solid;">
                    <td>
                        Hallo
                    </td>
                    <td>
                        Du
                    </td>
                    <td>
                        Gamle
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>